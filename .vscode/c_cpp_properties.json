{
    "configurations": [
        {
            "name": "SDCC",
            "includePath": [
                "${workspaceFolder}/src",
                "${workspaceFolder}/src/utils",
                "/usr/share/sdcc/include/mcs51",
                "/usr/share/sdcc/include"
            ],
            "defines": [
                "__SDCC",
                "__SDCC_mcs51",
                "__SDCC_MODEL_SMALL",
                // --- 添加以下宏定义来修复 IntelliSense ---
                "__sfr=unsigned char",
                "__sfr16=unsigned short",
                "__sfr32=unsigned long",
                "__sbit=unsigned char",
                "__at(x)=",
                "__interrupt(x)=",
                "__critical=",
                "__code=",
                "__xdata=",
                "__idata=",
                "__pdata=",
                "__data=",
                "sfr=unsigned char",
                "sbit=unsigned char",
                "__bit=unsigned char",
                "bit=unsigned char",
                "__asm=",
                "NOP=",
                "__endasm=",
                "__reentrant=/* nothing */"
            ],
            "compilerPath": "/usr/bin/sdcc",
            "cStandard": "c99",
            "cppStandard": "c++17",
            "intelliSenseMode": "gcc-x64",
            "compilerArgs": [
                "-mmcs51"
            ],
            "forcedInclude": [] 

        }
    ],
    "version": 4
}